    "version": "0.2.0",
    "configurations": [
        {
            "command": "dev log",
            "name": "Launch",
            "type": "node-terminal",
            "request": "launch",
            "internalConsoleOptions": "openOnFirstSessionStart"
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000,
            "externalConsole": false
        }
    ]
}